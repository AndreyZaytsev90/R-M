{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "singleAttributePerLine": false,
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "^react-(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./](?!.*\\.module\\.css$)",
    "\\.module\\.css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
